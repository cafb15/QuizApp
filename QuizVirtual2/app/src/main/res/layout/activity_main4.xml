<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.quizvirtual.Main2Activity">

        <TextView
            android:id="@+id/pregunta3_text_view"
            android:text="El aparato respiratorio está formado por: las fosas nasales, la boca, la faringe, la laringe, los bronquios y:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:paddingTop="15dp"/>

        <RadioButton
            android:id="@+id/el_higado"
            android:text="El hígado"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta3"/>

        <RadioButton
            android:id="@+id/los_riñones"
            android:text="Los riñones"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="145dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta3"/>

        <RadioButton
            android:id="@+id/el_corazon"
            android:text="El corazón"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta3"/>

        <RadioButton
            android:id="@+id/los_pulmones"
            android:text="Los pulmones"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="respuesta4"/>
    </LinearLayout>
</ScrollView>
