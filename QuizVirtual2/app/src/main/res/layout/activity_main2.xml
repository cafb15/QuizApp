<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.quizvirtual.Main2Activity">

        <TextView
            android:id="@+id/pregunta_text_view"
            android:text="¿Qué artista diseñó la Plaza Mayor de Salamanca?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:paddingTop="15dp"/>

        <RadioButton
            android:id="@+id/filippo_juvara"
            android:text="Filippo Juvara"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="100dp"
            android:paddingRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta1"/>

        <RadioButton
            android:id="@+id/alberto_churriguera"
            android:text="Alberto Churriguera"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="100dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="respuesta1"/>

        <RadioButton
            android:id="@+id/giovanni_battista_sacchetti"
            android:text="Giovanni Battista Sacchetti"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="100dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta1"/>

        <RadioButton
            android:id="@+id/antoine_dumanche"
            android:text="Antoine Dumanché"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="100dp"
            android:paddingRight="33dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta1"/>
    </LinearLayout>
</ScrollView>
