<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.quizvirtual.Main2Activity">

        <TextView
            android:id="@+id/pregunta4_text_view"
            android:text="¿Cuál fue la primera capital de los Estados Unidos de América?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:paddingTop="15dp"/>

        <RadioButton
            android:id="@+id/chicago"
            android:text="Chicago"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta4"/>

        <RadioButton
            android:id="@+id/washington"
            android:text="Washington"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta4"/>

        <RadioButton
            android:id="@+id/new_york"
            android:text="New York"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="140dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="respuesta3"/>

        <RadioButton
            android:id="@+id/philadelphia"
            android:text="Philadelphia"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="incorrecta4"/>
    </LinearLayout>
</ScrollView>
